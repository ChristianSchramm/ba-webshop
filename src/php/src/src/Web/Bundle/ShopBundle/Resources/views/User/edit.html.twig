{% extends 'WebShopBundle::admin.html.twig' %}

{% block title %} Admin Control Panel{% endblock %}

{% block content %}


<h2 class="heading style2">Userdaten von User {{ user.id  }}</h2>
<form  class="form"  action="{{  path('admin_user_save',{ 'id': user.id}) }}" method="post" }}>
    {{ form_errors(form) }}
    <div class="cols">
      <div class="col c6of12">
      
        {{ form_label(form.adress.name) }}
        {{ form_widget(form.adress.name) }}
        
        {{ form_label(form.adress.street) }}
        {{ form_widget(form.adress.street) }}
        
        {{ form_label(form.adress.postcode) }}
        {{ form_widget(form.adress.postcode) }}
        
        {{ form_label(form.adress.location) }}
        {{ form_widget(form.adress.location) }}
        
        {{ form_label(form.adress.country) }}
        {{ form_widget(form.adress.country) }}
        
      </div>
      <div class="col c6of12">
        
        
        {{ form_label(form.security.username) }}
        {{ form_widget(form.security.username) }}
        
        {{ form_label(form.security.email) }}
        {{ form_widget(form.security.email) }}
        

        
        <button class="btn form-btn" type="submit">User speichern</button>
      </div> <!-- c6of12 -->
    </div>
{{ form_end(form) }}
 
{% endblock %}