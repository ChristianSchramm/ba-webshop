{% extends 'WebShopBundle::admin.html.twig' %}

{% block title %} Admin Control Panel{% endblock %}

{% block content %}

<h2 class="heading style2">Bestellungs Verwaltung</h2>

                        <table cellpadding="0" cellspacing="0">
                          <thead>
                            <tr>
                              <th><h3 class="heading style3">Rechnung</h3></th>
                              <th><h3 class="heading style3">Datum</h3></th>
                              <th><h3 class="heading style3">Anzeigen</h3></th>
                              <th><h3 class="heading style3">Status</h3></th>
                              <th><h3 class="heading style3">Bearbeiten</h3></th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for bill in bills %}
                            <tr>
                              <td><p>{{ bill.rechnungsnummer }}</p></td>
                              <td><p>{{ bill.date|date('d.m.Y') }}</p></td>
                              <td><a class="show" target="_blank" href="/uploads/bills/{{ bill.path }}">Show</a></td>
                              <td><p>{% if bill.paid %} <stong>bezahlt</stong> {% else %} <stong>nicht bezahlt</stong> {% endif %}</p></td>
                              <td>
                                {% if bill.paid %}
													         <a href="{{ path('admin_bill_set', {'id': bill.id}) }}#nav">unbezahlt setzen</a>
													      {% else %}
													        <a href="{{ path('admin_bill_set', {'id': bill.id}) }}#nav">bezahlt setzen</a>
													      {% endif %}
													    </td>
                            </tr>
                            {% endfor %}
                          </tbody>
                          <tfoot>
                            <tr>
                              <td colspan="5"><small></small></td>
                            </tr>
                          </tfoot>
                        </table>


{% endblock %}
