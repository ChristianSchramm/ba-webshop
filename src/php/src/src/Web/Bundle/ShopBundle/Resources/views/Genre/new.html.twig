{% block title %} Admin Control Panel{% endblock %}

{% block content %}

<h2 class="heading style1">Genre Anlegen</h2>

<form class="form" action="{{  path('admin_genre_create') }}" method="post" }}>
    {{ form_errors(form) }}
    <div class="cols">
      <div class="col c6of12">  

        {{ form_label(form.name) }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
        
        <button class="btn form-btn" type="submit">Genre anlegen</button>
      </div>
    </div>


{{ form_end(form) }}



{% endblock %}