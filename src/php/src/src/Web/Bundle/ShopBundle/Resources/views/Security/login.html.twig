{% extends '::base.html.twig' %}

{% block body %}
	{% if error %}
	    <div>{{ error.message }}</div>
	{% endif %}
	
	
	
	<form action="{{ path('login_check') }}" method="post">
		<div>
			<ul>
				<li><label for="username">Username:</label> <input type="text" id="username" name="_username" value="{{ last_username }}" /></li>
				<li><label for="password">Password:</label> <input type="password" id="password" name="_password" /></li>
		
				<li><label for="remember_me">Keep me logged in</label> <input type="checkbox" id="remember_me" name="_remember_me" checked /></li>
		  </ul>
		</div>
	    <button type="submit">login</button>
	</form>
	
	<p>
		<a href="{{ path('register') }}"> register</a>
	</p>


{% endblock %}